{
  "name": "courses-aalto-better-filters",
  "module": "better-filters.ts",
  "type": "module",
  "description": "A browser extension to improve the UX of Aalto University course search.",
  "repository": "https://github.com/SirLarion/courses-aalto-better-filters",
  "author": "Miska Tammenpää <miska@tammenpaa.com> (https://miska.tammenpaa.com)",
  "license": "GPLv3",
  "scripts": {
    "client": "web-ext run --firefox=/usr/bin/firefox-developer-edition",
    "bg": "bun build filter-request.ts --outdir build --outfile filter-request.js",
    "content": "bun build better-filters.ts --outdir build --outfile better-filters.js",
    "build": "bun run bg && bun run content"
  },
  "devDependencies": {
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "web-ext": "^7.8.0",
    "webextension-polyfill-ts": "^0.26.0"
  }
}
