{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "moduleDetection": "force",
    "composite": true,
    "strict": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "outDir": "build",
    "types": ["bun-types"]
  },
  "include": ["*.ts"]
}
