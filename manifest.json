{
  "manifest_version": 3,
  "name": "courses-aalto-better-filters",
  "version": "1.0",
  "author": "Miska Tammenpää",
  "description": "A browser extension to improve the filtering system in courses.aalto.fi.",
  "icons": {
    "48": "bdollar.svg",
    "96": "bdollar.svg"
  },
  "permissions": [
    "storage",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "webRequestFilterResponse"
  ],
  "host_permissions": ["https://courses.aalto.fi/s/sfsites/*"],
  "background": {
    "scripts": ["build/filter-request.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://courses.aalto.fi/s/*"],
      "js": ["build/better-filters.js"],
      "css": ["filters.css"],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["plus.svg", "minus.svg"],
      "matches": ["https://courses.aalto.fi/s/course/hed__Course__c/*"]
    }
  ]
}
